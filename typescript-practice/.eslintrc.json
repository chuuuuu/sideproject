{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  // Uses the recommended rules from the @typescript-eslint/eslint-plugin
  "extends": [
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "indent": ["error", 2]
  },
  "ignorePatterns": ["*.js", "node_modules/*"]
}